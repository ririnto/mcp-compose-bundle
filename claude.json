{
  "mcpServers": {
    "codex": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "codex-mcp-server"
      ]
    },
    "context7": {
      "type": "http",
      "url": "http://localhost:48082/mcp"
    },
    "fetch": {
      "type": "stdio",
      "command": "mcp-server-fetch",
      "args": [
        "--ignore-robots-txt"
      ]
    },
    "git": {
      "type": "stdio",
      "command": "mcp-server-git"
    },
    "jetbrains": {
      "type": "stdio",
      "env": {
        "IJ_MCP_SERVER_PORT": "64342"
      },
      "command": "sh",
      "args": [
        "-lc",
        "java -jar $HOME/.config/github-copilot/intellij/mcpserver-stdio-253.29346.138-bundle.jar"
      ]
    },
    "markitdown": {
      "type": "http",
      "url": "http://localhost:48083/mcp"
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "ripgrep": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-ripgrep"
      ]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "serena": {
      "type": "stdio",
      "command": "serena-mcp-server",
      "args": [
        "--enable-web-dashboard",
        "false",
        "--context",
        "codex",
        "--project-from-cwd"
      ]
    }
  }
}
