{
  "servers": {
    "awesome-copilot": {
      "type": "http",
      "url": "http://localhost:48080/mcp"
    },
    "chrome-devtools-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp"
      ]
    },
    "codex": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "codex-mcp-server"
      ]
    },
    "context7": {
      "type": "http",
      "url": "http://localhost:48082/mcp"
    },
    "everything": {
      "type": "http",
      "url": "http://localhost:48081/mcp"
    },
    "fetch": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-fetch",
        "--ignore-robots-txt"
      ]
    },
    "filesystem": {
      "type": "stdio",
      "command": "sh",
      "args": [
        "-lc",
        "npx -y @modelcontextprotocol/server-filesystem $HOME/Projects"
      ]
    },
    "git": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-git"
      ]
    },
    "jetbrains": {
      "type": "stdio",
      "env": {
        "IJ_MCP_SERVER_PORT": "64342"
      },
      "command": "sh",
      "args": [
        "-lc",
        "java -jar $HOME/.config/github-copilot/intellij/mcpserver-stdio-253.29346.138-bundle.jar"
      ]
    },
    "markitdown": {
      "type": "http",
      "url": "http://localhost:48083/mcp"
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "playwright": {
      "type": "http",
      "url": "http://localhost:48084/mcp"
    },
    "ripgrep": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-ripgrep"
      ]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--enable-web-dashboard",
        "false",
        "--context",
        "ide",
        "--project-from-cwd"
      ]
    },
    "time": {
      "type": "stdio",
      "env": {
        "LOCAL_TIMEZONE": "Asia/Seoul"
      },
      "command": "uvx",
      "args": [
        "mcp-server-time"
      ]
    }
  }
}
